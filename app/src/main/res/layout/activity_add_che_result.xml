<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ims.informationmanagementsystem.Chemistry.CheResult.AddCheResult">

    <EditText
        android:id="@+id/editTextCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="40dp" />

    <ImageView
        android:id="@+id/imageViewCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chooseCR"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/chooseCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCR"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:text="ChooseCR"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/btnCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="AddCR"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="345dp" />
</RelativeLayout>
