<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D81B60"

    tools:context="ims.informationmanagementsystem.Activities.Main18Activity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"


        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="Information Management System"
            android:textStyle="italic"
            android:textSize="20dp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"


            >


            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EC407A"


                app:cardCornerRadius="10dp"

                >


                <ImageView
                    android:id="@+id/Datesheet5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/datesheet"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATESHEET"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="40dp"

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#EC407A"
                app:cardCornerRadius="10dp"


                >

                <ImageView
                    android:id="@+id/Result5"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/result"
                    />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESULT"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="50dp"

                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

